<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student2" class="inhatc.cse.spring.di.ch06.java_xml.Student">
        <constructor-arg value="최길순"></constructor-arg>
        <constructor-arg value="31"></constructor-arg>
        <constructor-arg >
            <list>
                <value>달리기</value>
                <value>프로그램</value>
            </list>
        </constructor-arg>
        <property name="height" value="165" />
        <property name="weight" value="55" />
