<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bmiCalculator" class="inhatc.cse.spring.di.properties.BMICalculator">
        <property name="lowWeight">
           <value>18.5</value>
        </property>
        <property name="normal" value="23" />
        <property name="overWeight" value="25" />
        <property name="obesity">
            <value>30</value>
        </property>
    </bean>

    <bean id="myInfo" class="inhatc.cse.spring.di.properties.MyInfo">
        <property name="name" value="홍길동" />
        <property name="height" value="187" />
        <property name="weight" value="84" />
        <property name="hobbys">
            <list>
                <value>등산</value>
                <value>자전거</value>
                <value>독서</value>
            </list>
        </property>
        <property name="bmiCalculator">
            <ref bean="bmiCalculator" />
        </property>
    </bean>

</beans>